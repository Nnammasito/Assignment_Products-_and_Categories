@using Assignment_Products__and_Categories.Models
@model MyViewModel

<h1>@Model.Product.Name</h1>
<div class="midleblock d-flex">
    <div class="Columblock">
        <p>Categories</p>
        <div class="listblock">
            @foreach (Association result in @Model.Product.Association)
            {
                @* <p>@result.Category.Name</p> *@
            }
        </div>
    </div>
    <div class="Columblock">
        <form asp-action="AddCategory" asp-controller="Home" asp-route-id="@Model.Product.ProductId">
            <div class="block blockcolum">
                <label asp-for="CategoryID">Add Category</label>
                <select asp-for="CategoryID">
                    @foreach (Category result in @Model.Categories)
                    {
                        <option value="@result.CategoryId">@result.Name</option>
                    }
                </select>
            </div>
            <div class="block">
                <span asp-validation-for="CategoryID"></span>
            </div>
            <div class="block">
                <button type="submit" class="btn1 btnend">Add</button>
            </div>
        </form>
    </div>
</div>
